@model IEnumerable<Libraries>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="text-start">
        <h2 class="text-primary">Library </h2>
    </div>
    <div class="text-end">
        <a asp-controller="Liberary" asp-action="Create" class="btn btn-primary">
              Create New Book
        </a>
        <br />
        <hr/>
    </div>
    <div class=" row">
        @foreach(var obj in Model)
        {
            <div class="container col p-6"style="max-height:500px" >
                <a asp-controller="Liberary" asp-action="ViewContent" asp-route-id="@obj.Id" >
                    <img src="@obj.ImgPath" class="img-responsive" style="width:100%;height:100%; object-fit:contain" />
                <div width="200px" class="text-primary align-content-center align-items-center justify-content-center d-flex " >
                    <p class=""> @obj.ArticleName</p>
                </div>
                </a>
            </div>
        }
    </div>
</div>

