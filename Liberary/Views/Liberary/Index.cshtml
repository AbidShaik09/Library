@model IEnumerable<Liberaries>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="text-start">
        <h2 class="text-primary">Library </h2>
    </div>
    <div class="text-end">
        <a asp-controller="Liberary" asp-action="Create" class="btn btn-primary">
              Create New Book
        </a>
        <br />
        <hr/>
    </div>
    <div class="row">
        @foreach(var obj in Model)
        {
            <div class="col p-2">
                <a asp-controller="Liberary" asp-action="ViewContent" asp-route-id="@obj.Id">
                <img src="@obj.ImgPath" width="350" height="250"/>

                    <h2 class=" text-primary">@obj.BookName</h2>
                </a>
            </div>
        }
    </div>
</div>

